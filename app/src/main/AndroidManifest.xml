<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.funcoding.opengles.sample">

    <!--告诉系统应用要求的OpenGL ES版本，OpenGL ES 2.0 需要 Android 2.2（API 级别 8）或更高版本，因此请确保您的 Android 项目以该 API 或更高级别为目标-->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenGLESSample">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".google.GoogleSampleActivity" />
        <activity android:name=".google.triangle1.TriangleActivity1" />
        <activity android:name=".google.triangle2.TriangleActivity2" />
        <activity android:name=".google.triangle3.TriangleActivity3" />
        <activity android:name=".google.triangle4.TriangleActivity4" />
        <activity android:name=".google.square1.SquareActivity1" />
        <activity android:name=".google.square2.SquareActivity2" />
        <activity android:name=".google.square3.SquareActivity3" />
        <activity android:name=".google.square4.SquareActivity4" />
    </application>

</manifest>